<div class="section-container">
  <section class="section-content">
    <header data-name="{{ section.name }}" class="page-header">
      <div class="container">
        <div class="section-name">
          <h1>
            {{section.name}}
          </h1>
          {{#if section.description}}
            <p class="page-header-description">{{section.description}}</p>
          {{/if}}
        </div>
      </div>

      <div class="bubble-1 rellax" data-rellax-speed="7"></div>
      <div class="bubble-2 rellax" data-rellax-speed="5"></div>
      <div class="bubble-3 rellax" data-rellax-speed="2"></div>
    </header>

    <div class="container clearfix">
      <ul class="article-list">
        {{#if section.sections}}
          {{#each section.sections}}
            <li class="article-list-item">
              <a class="article-list-link" href="{{url}}">
                <strong>{{name}}</strong>

                <span class="article-list-link__icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                    <path d="M5.11611652,-0.883883476 C5.60427189,-1.37203884 6.39572811,-1.37203884 6.88388348,-0.883883476 C7.33949515,-0.428271803 7.36986926,0.291548619 6.97500581,0.782388126 L6.88388348,0.883883476 L1.767,6 L6.88388348,11.1161165 C7.33949515,11.5717282 7.36986926,12.2915486 6.97500581,12.7823881 L6.88388348,12.8838835 C6.4282718,13.3394952 5.70845138,13.3698693 5.21761187,12.9750058 L5.11611652,12.8838835 L-0.883883476,6.88388348 C-1.33949515,6.4282718 -1.36986926,5.70845138 -0.975005811,5.21761187 L-0.883883476,5.11611652 L5.11611652,-0.883883476 Z" transform="matrix(-1 0 0 1 15 6)"/>
                  </svg>
                </span>
              </a>
            </li>
          {{/each}}
        {{/if}}

        {{#if section.articles}}
          {{#each section.articles}}
            <li class="article-list-item {{#if promoted}} article-promoted{{/if}}">

              <a href="{{url}}" class="article-list-link">
                {{#if promoted}}
                  <span data-title="{{t 'promoted'}}" class="icon-star"></span>
                {{/if}}

                {{title}}

                {{#if internal}}
                  <span class="icon-lock" title="{{t 'internal'}}"></span>
                {{/if}}
              </a>
            </li>
          {{/each}}
        {{/if}}

      {{pagination}}
    </div>
  </section>
</div>

<div class="billboard billboard--left">
  <div class="container">
    <div class="billboard__illustration">
      <img src="{{asset 'find-help.png'}}" alt="">
    </div>

    <div class="billboard__content">
      <h2 class="billboard__heading">{{ settings.contact_support_heading }}</h2>
      <p class="billboard__description">{{ settings.contact_support_paragraph }}</p>
      <div class="billboard__button">
        <button class="button open-ticket-modal" role="button">{{ settings.contact_support_button_text }}</button>
      </div>
    </div>
  </div>
</div>

